<% @names.each do |name| %>
  <tr>
    <td><%= name.title %></td>
    <td><%= button_to 'Like',  {:controller => "names", :action => "like", :id => name.id}, :method => :put %></td>
    <td><%= button_to 'Dislike',{:controller => "names", :action =>"dislike", :id => name.id}, :method => :put %></td>
    <td></td>
    <td><%=name.votesnumber %></td>
  </tr>
<% end %>
</table>

<br />

<%= form_for(@name) do |f| %>
<div class="field">
    <%= "Add your Band name:" %><br />
    <%= f.text_field :title %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

